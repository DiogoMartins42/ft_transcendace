# Project name
NAME = database

# Paths
SRC_DIR = .
DCOMPOSE_FILE = $(SRC_DIR)/docker-compose.yml

# Docker commands
DOCKER_COMPOSE = docker-compose -f $(DCOMPOSE_FILE)

# Default rule
all: build

build:
	@echo "ğŸš€ Building the containers..."
	$(DOCKER_COMPOSE) build --no-cache

start:
	@echo "â–¶ï¸ Starting the containers..."
	$(DOCKER_COMPOSE) up -d

stop:
	@echo "â¹ï¸ Stopping the containers..."
	$(DOCKER_COMPOSE) down

clean:
	@echo "ğŸ—‘ï¸ Removing containers and volumes..."
	$(DOCKER_COMPOSE) down -v

fclean: clean

re: fclean build

logs-sqlite:
	@echo "ğŸ“œ SQLite logs:"
	docker logs sqlite-init

shell-sqlite:
	@echo "ğŸ”§ Accessing SQLite container..."
	docker exec -it sqlite-init sh

